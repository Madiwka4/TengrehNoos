@using System.Collections
@model List<TengrehNoos.Models.NewsArticlePreviewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-4">
        <div class="row">

            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header">Latest News</div>
                    <div class="card-body">
                        @{
                            foreach (var newsArticle in Model)
                            {
                                <a asp-action="Article" asp-route-id="@newsArticle.Id" class="text-decoration-none text-black">
                                    <div class="media mb-3 border-2 card p-2">
                                        <img src="@newsArticle.ImageUrl" width="200px" height="100px" class="mr-3" alt="News Image">
                                        <div class="media-body">
                                            <h5 class="mt-0">@newsArticle.Title</h5>
                                            <p class="text-muted">@newsArticle.Date.ToLongDateString()</p>
                                            @newsArticle.Subtitle
                                            <!-- add tags here -->
                                            <div class = "mt-1 tags">
                                                @foreach (var tag in newsArticle.Tags)
                                                {
                                                    <span class="badge bg-secondary">@tag</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        }
                        </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header">Categories</div>
                    <div class="card-body">
                        <ul class="list-group">
                            @{
                                var sortTypes = new List<string> {"latest", "oldest"};
                                var currentCategory = ViewData["CurrentCategory"] as string;
                                foreach (var category in sortTypes)
                                {
                                    var listItemClass = (string?)category == currentCategory ? "list-group-item bg-light" : "list-group-item";
                                    <li class="@listItemClass" style="padding: 0;">
                                        <a asp-action="Index" asp-route-sort="@category" class="d-block p-2">@category</a>
                                    </li>
                                }
                            }
                            </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
